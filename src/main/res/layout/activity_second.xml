<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/cosmos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />

    <ImageView
        android:id="@+id/logotype"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:src="@drawable/logo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="btnMain"/>

    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/logotype"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/relativelayout2">

        <ImageView
            android:id="@+id/block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/number1"
            />

        <TextView
            android:id="@+id/number_ofPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Телефон:"
            android:textColor="#000000"
            android:textSize="26dp"
            android:layout_alignLeft="@id/block"
            android:layout_alignTop="@id/block"
            android:layout_alignRight="@id/block"
            android:layout_alignBottom="@id/block"
            android:gravity="center"
            android:layout_marginBottom="80dp"
            />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 (951) 745-51-17"
            android:autoLink="phone"
            android:textColorLink="#2D2D2D"
            android:textSize="20dp"
            android:layout_alignLeft="@id/number_ofPhone"
            android:layout_alignTop="@id/number_ofPhone"
            android:layout_alignRight="@id/number_ofPhone"
            android:layout_alignBottom="@id/block"
            android:gravity="center"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/relativelayout3">

        <ImageView
            android:id="@+id/block2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/number1"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="E-mail:"
            android:textColor="#000000"
            android:textSize="26dp"
            android:layout_alignLeft="@id/block2"
            android:layout_alignTop="@id/block2"
            android:layout_alignRight="@id/block2"
            android:layout_alignBottom="@id/block2"
            android:gravity="center"
            android:layout_marginBottom="80dp"
            />

        <TextView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blackmedia.vol@yandex.ru"
            android:autoLink="email"
            android:textColorLink="#2D2D2D"
            android:textSize="18dp"
            android:layout_alignLeft="@id/email"
            android:layout_alignTop="@id/email"
            android:layout_alignRight="@id/email"
            android:layout_alignBottom="@id/block2"
            android:gravity="center"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footer2">

        <ImageView
            android:id="@+id/block3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/number1"
            />

        <TextView
            android:id="@+id/social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Социальные сети:"
            android:textColor="#000000"
            android:textSize="26dp"
            android:layout_alignLeft="@id/block3"
            android:layout_alignTop="@id/block3"
            android:layout_alignRight="@id/block3"
            android:layout_alignBottom="@id/block3"
            android:gravity="center"
            android:layout_marginBottom="80dp" />

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/whatsapp"
            android:layout_marginLeft="50dp"
            android:layout_alignLeft="@id/social"
            android:layout_alignTop="@id/social"
            android:layout_alignBottom="@id/block3"
            android:onClick="wapp"
            android:gravity="center"
            android:layout_marginTop="35dp" />

        <ImageView
            android:id="@+id/vk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vk"
            android:layout_marginRight="50dp"
            android:layout_alignTop="@id/social"
            android:layout_alignRight="@id/social"
            android:layout_alignBottom="@id/block3"
            android:onClick="vk"
            android:gravity="center"
            android:layout_marginTop="35dp"
            />

    </RelativeLayout>


    <ImageView
        android:id="@+id/footer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/footer_1"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/footer2"
        app:layout_constraintStart_toStartOf="@+id/footer2"
        app:layout_constraintBottom_toBottomOf="@+id/footer2"
        app:layout_constraintEnd_toEndOf="@+id/footer2">

        <Button
            android:id="@+id/o_nas"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/o_nas"
            android:text="О нас"
            android:textSize="10dp"
            android:onClick="btnInfo"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/footer2"
            app:layout_constraintLeft_toLeftOf="@+id/footer2"
            app:layout_constraintRight_toLeftOf="@+id/uslugi"
            app:layout_constraintTop_toTopOf="@+id/footer2" />

        <Button
            android:id="@+id/information"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/uslugi_2"
            android:text="Услуги"
            android:textSize="10dp"
            android:onClick="btnUslugi"
            app:layout_constraintBottom_toBottomOf="@+id/footer2"
            app:layout_constraintLeft_toRightOf="@+id/o_nas"
            app:layout_constraintTop_toTopOf="@+id/footer2" />

        <Button
            android:id="@+id/feedback"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/feedback"
            android:text="Отзывы"
            android:textSize="10dp"
            android:onClick="btnFeedback"
            app:layout_constraintBottom_toBottomOf="@+id/footer2"
            app:layout_constraintLeft_toRightOf="@+id/information"
            app:layout_constraintRight_toLeftOf="@+id/contacts"
            app:layout_constraintTop_toTopOf="@+id/footer2" />

        <Button
            android:id="@+id/contacts"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/contact"
            android:text="Контакты"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/footer2"
            app:layout_constraintLeft_toRightOf="@+id/feedback"
            app:layout_constraintRight_toRightOf="@+id/footer2"
            app:layout_constraintTop_toTopOf="@+id/footer2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>