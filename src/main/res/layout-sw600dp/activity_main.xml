<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/cosmos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />

    <ImageView
        android:id="@+id/logotype"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:src="@drawable/logo"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© Бобренев Даниил и Самылов Дмитрий"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        app:layout_constraintRight_toRightOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"/>

    <ImageView
        android:id="@+id/stone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stone1"
        app:layout_constraintTop_toTopOf="@+id/astroman1_1"
        app:layout_constraintRight_toLeftOf="@+id/astroman1_1"
        />

    <ImageView
        android:id="@+id/stone2"
        android:layout_width="170dp"
        android:layout_height="130dp"
        android:src="@drawable/stone2"
        app:layout_constraintRight_toRightOf="@id/astroman1_1"
        app:layout_constraintBottom_toTopOf="@+id/astroman1_1" />

    <ImageView
        android:id="@+id/astroman1_1"
        android:layout_width="218dp"
        android:layout_height="503dp"
        android:src="@drawable/astroman1"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintRight_toRightOf="@id/footer2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="158dp"
        android:layout_height="0dp"
        android:text="Реклама в интернете и создание сайтов в Вологде"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_3"
        android:layout_marginLeft="25px"
        app:layout_constraintTop_toBottomOf="@+id/stone1"
        app:layout_constraintRight_toLeftOf="@+id/astroman1_1"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:id="@+id/footer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/footer_1"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/footer2"
        app:layout_constraintStart_toStartOf="@+id/footer2"
        app:layout_constraintBottom_toBottomOf="@+id/footer2"
        app:layout_constraintEnd_toEndOf="@+id/footer2">

        <Button
            android:id="@+id/o_nas"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/o_nas"
            android:text="О нас"
            android:textSize="10dp"
            android:onClick="btnInfo"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/footer2"
            app:layout_constraintLeft_toLeftOf="@+id/footer2"
            app:layout_constraintRight_toLeftOf="@+id/uslugi"
            app:layout_constraintTop_toTopOf="@+id/footer2" />

        <Button
            android:id="@+id/information"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/uslugi_2"
            android:text="Услуги"
            android:textSize="10dp"
            android:onClick="btnUslugi"
            app:layout_constraintBottom_toBottomOf="@+id/footer2"
            app:layout_constraintLeft_toRightOf="@+id/o_nas"
            app:layout_constraintTop_toTopOf="@+id/footer2" />

        <Button
            android:id="@+id/feedback"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/feedback"
            android:text="Отзывы"
            android:textSize="10dp"
            android:onClick="btnFeedback"
            app:layout_constraintBottom_toBottomOf="@+id/footer2"
            app:layout_constraintLeft_toRightOf="@+id/information"
            app:layout_constraintRight_toLeftOf="@+id/contacts"
            app:layout_constraintTop_toTopOf="@+id/footer2" />

        <Button
            android:id="@+id/contacts"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="@android:color/transparent"
            android:drawableTop="@drawable/contact"
            android:text="Контакты"
            android:textSize="10dp"
            android:onClick="btnContacts"
            app:layout_constraintBottom_toBottomOf="@+id/footer2"
            app:layout_constraintLeft_toRightOf="@+id/feedback"
            app:layout_constraintRight_toRightOf="@+id/footer2"
            app:layout_constraintTop_toTopOf="@+id/footer2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>